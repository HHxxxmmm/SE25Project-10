		{
			"name": "获取我的订单 - 正常情况",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"状态码为200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"响应状态为SUCCESS\", function () {",
							"    const response = pm.response.json();",
							"    pm.expect(response.status).to.eql(\"SUCCESS\");",
							"});",
							"",
							"pm.test(\"返回订单列表\", function () {",
							"    const response = pm.response.json();",
							"    pm.expect(response.orders).to.be.an('array');",
							"});",
							"",
							"pm.test(\"验证订单基本信息\", function () {",
							"    const response = pm.response.json();",
							"    if (response.orders && response.orders.length > 0) {",
							"        const order = response.orders[0];",
							"        pm.expect(order.orderId).to.be.a('number');",
							"        pm.expect(order.orderNumber).to.be.a('string');",
							"        pm.expect(order.orderTime).to.not.be.null;",
							"        pm.expect(order.totalAmount).to.be.a('number');",
							"        pm.expect(order.orderStatus).to.be.a('number');",
							"        pm.expect(order.orderStatusText).to.be.a('string');",
							"    }",
							"});",
							"",
							"pm.test(\"验证车次信息\", function () {",
							"    const response = pm.response.json();",
							"    if (response.orders && response.orders.length > 0) {",
							"        const order = response.orders[0];",
							"        pm.expect(order.trainId).to.be.a('number');",
							"        pm.expect(order.trainNumber).to.be.a('string');",
							"        pm.expect(order.departureDate).to.not.be.null;",
							"        pm.expect(order.departureTime).to.not.be.null;",
							"        pm.expect(order.arrivalTime).to.not.be.null;",
							"    }",
							"});",
							"",
							"pm.test(\"验证车站信息\", function () {",
							"    const response = pm.response.json();",
							"    if (response.orders && response.orders.length > 0) {",
							"        const order = response.orders[0];",
							"        pm.expect(order.departureStationName).to.be.a('string');",
							"        pm.expect(order.departureCity).to.be.a('string');",
							"        pm.expect(order.arrivalStationName).to.be.a('string');",
							"        pm.expect(order.arrivalCity).to.be.a('string');",
							"    }",
							"});",
							"",
							"pm.test(\"验证车票数量\", function () {",
							"    const response = pm.response.json();",
							"    if (response.orders && response.orders.length > 0) {",
							"        const order = response.orders[0];",
							"        pm.expect(order.ticketCount).to.be.a('number');",
							"        pm.expect(order.ticketCount).to.be.greaterThan(0);",
							"    }",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
